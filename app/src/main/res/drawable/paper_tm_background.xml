            android:shape="oval">
            <gradient
                android:angle="90"
                android:endColor="@color/design_default_color_primary"
                android:startColor="@color/design_default_color_primary" />
        </shape>
    </item>
    <item
        android:bottom="302dp"
        android:left="-100dp"
        android:right="-100dp"
        android:top="-280dp">
